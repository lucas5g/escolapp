generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}

model Project {
  id         Int    @id @default(autoincrement())
  name       String
  permission String
}

model Group {
  id     Int    @id @default(autoincrement())
  name   String @unique
  codcur Int
  codper Int
  teams  Team[]
}

model Modality {
  id              Int    @id @default(autoincrement())
  name            String @unique
  membersQuantity Int
  teamsQuantity   Int
  teams           Team[]
}

model Place {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Student {
  id        Int      @id @default(autoincrement())
  ra        String   @unique
  name      String
  course    String
  group     String
  codcur    Int
  codper    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  teams Team[]
}

model Team {
  id         Int       @id @default(autoincrement())
  name       String
  modalityId Int?
  groupId    Int?
  genreId    Int?
  Genre      Genre?    @relation(fields: [genreId], references: [id])
  Group      Group?    @relation(fields: [groupId], references: [id])
  Modality   Modality? @relation(fields: [modalityId], references: [id])

  @@index([genreId], map: "Team_genreId_fkey")
  @@index([groupId], map: "Team_groupId_fkey")
  @@index([modalityId], map: "Team_modalityId_fkey")
}
